#!/bin/bash
BRIGHTNESS_VALUE=`brightnessctl | grep -o "(.*" | tr -d "()"`
BRIGHTNESS_NR=${BRIGHTNESS_VALUE//%}

if [ $BRIGHTNESS_NR -lt 20 ]; then
	BRIGHTNESS_ICON=''
elif [ $BRIGHTNESS_NR -lt 60 ]; then
	BRIGHTNESS_ICON=''
elif [ $BRIGHTNESS_NR -le 100 ]; then
	BRIGHTNESS_ICON=''
else
	BRIGHTNESS_ICON=''
fi

echo "$BRIGHTNESS_ICON  $BRIGHTNESS_VALUE"
