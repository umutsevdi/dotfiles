-- Conky is a monitoring application that is displayed on the desktop
-- @author umutsevdi 

conky.config = {
-- Conky settings
	update_interval = 2,
	override_utf8_locale = true,
	double_buffer = true,
	no_buffers = true,
	text_buffer_size = 2048,

-- Window specifications
	own_window = true,
	own_window_class = 'conky',
	own_window_transparent = true,
	own_window_type = 'override',
	own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
	border_inner_margin = 0,
	border_outer_margin = 0,
	alignment = 'bottom_middle',
	gap_x = 0,
	gap_y = 0,

-- Graphics settings
	draw_shades = false,
	draw_outline = false,
	draw_borders = false,
	draw_graph_borders = false,

-- Text settings
	use_xft = true,
	xftalpha = 0,
	text_buffer_size = 2048,
	font = 'JetBrains Mono:size=11',
	uppercase = false,
	default_color = '#ffffff',
    color0 = '#C9CBFF',
    color1 = '#D9E0EE',
    color2 = '#89DCEB',
    color3 = '#F2CDCD',
    color4 = '#C3BAC6',
    color5 = '#ABE9B3',
    color6 = '#FAE3B0',
};
conky.text = [[${alignc}${color0}${font Roboto Bold:size=20}${time %A}${voffset -25}
${alignc}${color1}${font Roboto Regular:size=55}${time %b%e}${voffset -45}
${alignc}${font JetBrains Mono Regular:bold:size=100}${time %k:%M}${font}
${alignr}
${font JetBrains Mono Regular:bold:size=10}Memory:${font JetBrains Mono :italic:size=9}  ${mem}  ${membar}
${font JetBrains Mono Regular:bold:size=10}Disk:${font JetBrains Mono :italic:size=9}      ${fs_used /}  ${fs_bar /}
${font JetBrains Mono Regular:bold:size=10}${color3}Top Processes:${font JetBrains Mono :italic:size=9}   ${cpu}%  ${cpubar}
${font JetBrains Mono Regular :size=10}${color3}Name                                PID${alignr}CPU%           TIME${font JetBrains Mono :italic:size=9}
${voffset -10}$hr
${voffset -3}${color3}${top name 1} ${top pid 1} ${alignr}${top cpu 1} ${top time 1}
${voffset -3}${color3}${top name 2} ${top pid 2} ${alignr}${top cpu 2} ${top time 2}
${voffset -3}${color3}${top name 3} ${top pid 3} ${alignr}${top cpu 3} ${top time 3}
${voffset -3}${color3}${top name 4} ${top pid 4} ${alignr}${top cpu 4} ${top time 4}
${voffset -3}${color3}${top name 5} ${top pid 5} ${alignr}${top cpu 5} ${top time 5}
]];
