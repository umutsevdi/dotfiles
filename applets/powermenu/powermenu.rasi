configuration {
    show-icons:                     false;
    disable-history:                false;
	sidebar-mode: 					false;
	font:                      		"Roboto Regular 12";
}

@import "../colors.rasi"

* {
    background-color:               @background-light;
    text-color:                     @foreground;
}

window {
    transparency:                   "real";
    border-radius:                  10px;
    width:                         25%;
    location:                       north;
    x-offset:                       0px;
    y-offset:                       3%;
}

listview {
    background-color:               @nobg;
    columns:                        4;
    lines:							1;
    margin:                         8px;
    spacing:                        8px;
    cycle:                          true;
    dynamic:                        true;
    layout:                         vertical;
}

mainbox {
    background-color:               @background;
    children:                       [inputbar, listview ];
}

element {
    background-color:               @background;
    text-color:                     @foreground;
    orientation:                    vertical;
    border-radius:                  10px;
}

element-text {
    background-color: 				@nobg;
    text-color:       				inherit;
	font:							@nerdfont-big;
    expand:                         true;
    horizontal-align:               0.5;
    vertical-align:                 0.5;
    margin:                         26px 26px 26px 26px;
}

element normal.urgent,
element alternate.urgent {
    background-color:               @urgent;
    text-color:                     @foreground;
    border-radius:                  10px;
}

element normal.active,
element alternate.active {
    background-color:               @background-alt;
    text-color:                     @foreground;
}

element selected {
    background-color:               @accent;
    text-color:                     @background;
    border:                  		0px;
    border-radius:                  10px;
    border-color:                  	@border;
}

element selected.urgent {
    background-color:               @urgent;
    text-color:                     @foreground;
}

element selected.active {
    background-color:               @background-alt;
    color:                          @foreground;
}


inputbar {
	children: 						[ textbox-prompt-colon, prompt ];
    spacing:                        0px;
    background-color:               @background;
    text-color:                     @foreground;
    expand:                         false;
    margin:                         10px 10px 10px 10px;
    padding:                        10px;
    border-radius:                  10px;
    position:                       center;
}


prompt {
    background-color:               @nobg;
    text-color:                     @foreground;
    horizontal-align:               0.5;
    vertical-align:                 0.5;
}

textbox-prompt-colon {
    background-color:               @nobg;
    horizontal-align:               0.5;
    vertical-align:                 0.5;
}

